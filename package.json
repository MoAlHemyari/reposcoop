{
	"name": "reposcoop",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:timed": "sh -c 'bun run dev & PID=$!; sleep 30; kill $PID 2>/dev/null || true; echo \"Dev server stopped after timeout\"'",
		"dev:background": "bun run dev &",
		"build": "vite build",
		"preview": "vite preview",
		"preview:timed": "sh -c 'bun run preview & PID=$!; sleep 30; kill $PID 2>/dev/null || true; echo \"Preview server stopped after timeout\"'",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "biome format --write .",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test:unit": "vitest",
		"test": "bun run test:unit -- --run && bun run test:e2e",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.4",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-cloudflare": "^7.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@vitest/browser": "^3.2.3",
		"mdsvex": "^0.12.3",
		"playwright": "^1.53.0",
		"shadcn-svelte": "^1.0.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dompurify": "^3.2.6",
		"marked": "^16.1.1",
		"tailwind-merge": "^3.3.1"
	}
}
